<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cantando"
    tools:context="com.kruma.kanta.view.fragments.RankingFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

                <ListView
                    android:id="@+id/lstCancionRanking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="50dp"

                    />

                <TextView

                    android:id="@+id/txtResultadoRanking"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="text"
                    android:hint="No se encontraron Resultados"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/edittextstyle"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="60dp"
                    android:visibility="gone"

                    android:textColorHint="@color/cardview_light_background" />


        </LinearLayout>

        <TextView
            android:id="@+id/txtFiltroGeneroRanking"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"

            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:hint="Genero  : Ninguno"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColorHint="@color/cardview_light_background" />
        <TextView
            android:id="@+id/txtFiltroIdiomaRanking"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="180dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="10sp"
            android:hint="Idioma  : Ninguno"
            android:textColor="#ffffff"
            android:textColorHint="@color/cardview_light_background"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
</RelativeLayout>
