}
//Lista de Rankiados
function ListarRankiados() {
    AccionDefault(true, "Ranking.aspx/ListarRankiados", {}, CargarGrilla, null, null, null, 1);
}

//Carga la grilla de cursos
function CargarGrilla(obj_pLista) {

    var int_Indice = 0;
    var int_Columnas = 3;
    var str_HTML = "";
    var int_Puesto = 1;
    var div_Eventos = $("#divRankiados");
    div_Eventos.html('');

    if (obj_pLista.Result.length <= 0) {
        str_HTML += "<div class='col-lg-12' align='center' style='margin-top: 25px;'>No tiene eventos.</div>";
        $("#divRankiados").append(str_HTML);
    }
    else {
        var str_Titulo = '';
        var str_Descripcion = '';
        var str_ImagenURL = '';
        for (var i = 0; i < obj_pLista.Result.length; i++) {

            str_Titulo = '';
            str_Descripcion = '';
            str_URL = '';

            if (int_Indice == 0) {
                div_Row = $("<div class='row'></div>");
                div_Eventos.append(div_Row);
            }

            if (obj_pLista.Result[i].LocalCancion.Album.IdAlbum != null) {
                str_Titulo = obj_pLista.Result[i].LocalCancion.Cancion.Descripcion;
                str_ImagenURL = obj_pLista.Result[i].LocalCancion.Album.ImagenURL;
            }

            str_HTML = '';
            str_HTML += "<div class='col-lg-4' align='center' style='margin-top: 15px;'>";
            str_HTML += "<table style='height: 120px; width: 120px; border-color: white; border-style: solid; border-width: thin; color: black;'>";
            str_HTML += "<tbody>";
            str_HTML += "<tr>";
            str_HTML += "<img alt='' style='max-height: 150px;min-height: 150px;max-width:150px;200px;min-width:150px;' src='../../Images/Numero/Numero1.png'  />";
            str_HTML += "<td align='center' style='padding: 1px 1px 1px 1px;'>";
            str_HTML += "<img alt='' style='max-height: 120px;min-height: 120px;max-width:170px;200px;min-width:170px;' src='" + str_ImagenURL + "'  /></td>";
            str_HTML += "</tr>";
            //str_HTML += "<tr>";
            //str_HTML += "<td align='center'>";
            //str_HTML += "<h3><strong>" + str_Titulo + "</strong></h3>";
            //str_HTML += "</td>";
            //str_HTML += "</tr>";
            str_HTML += "<tr>";
            str_HTML += "<td style='background-color:#1F3C83;' align='center'>";
            str_HTML += "<button class='btnLocal btn btn-info' Onclick='return false' style='width:100%;'>";
            str_HTML += "" + str_Titulo + "</button>";
            str_HTML += "</td>";
            str_HTML += "</tr>";
            str_HTML += "</tbody>";
            str_HTML += "</table>";
            str_HTML += "</div>";
            ////if(){
            //str_HTML += "<tr>";
            //str_HTML += "<td style='background-color:#1F3C83;' align='center'>";
            //str_HTML += "<button class='btnRankiados btn btn-info' Onclick='return false' style='width:100%;'>";
            //str_HTML += "" + "Ver +" + "</button>";
            //str_HTML += "</td>";
            //str_HTML += "</tr>";
            ////}
            div_Row.append($(str_HTML));

            int_Indice += 1;
            int_Puesto += 1;
            if (int_Indice == int_Columnas)
                int_Indice = 0;
        }
    }
}
