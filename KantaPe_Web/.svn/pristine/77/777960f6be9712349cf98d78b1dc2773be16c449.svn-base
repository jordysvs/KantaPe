function CargarCabecera() {
    var divRowCategorias = $("#divBotones");
    divRowCategorias.append("<button onclick= 'IrHome();return false;' style='border-style: solid;border-width:0px; color: white; padding: 10px 360px 10px 20px;' class='btn btn-sm btn-info'> " + "HOME" + "</button>");
