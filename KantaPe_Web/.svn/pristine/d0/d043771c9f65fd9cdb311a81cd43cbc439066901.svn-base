        /// <item><FecCrea>12-07-2016</FecCrea></item></list></remarks>
        public static Kruma.Core.Util.Common.List<Kruma.KantaPe.Entidad.Oferta> Listar(
            int? int_pIdEmpresa,
            int? int_pIdLocal,
            int? int_pIdOferta,
